
<nav class="navbar">
    <div class="logo_wrapper">
            <a href="{{ path_for('home') }}" class="logo">Matcha</a>
    </div>   

    <div class="nav_buttons">
      {% if auth.check %}
        <div class="link_wrapper link_wrapper_1"><a class="button is-link" href="{{ path_for('search') }}">Search</a></div>
        {% if auth.is_filled %}
          <div class="link_wrapper link_wrapper_2 notifications_alarm_wrapper"><a class="button is-link" href="{{ path_for('user.notifications') }}">Notifications</a>
          <div class="link_wrapper link_wrapper_2"><div class="notifications_alarm"><span class="icon "><i class="fas fa-envelope"></i></span><div id="notifications_count"></div></div></div></div>
          <div class="link_wrapper link_wrapper_2"><a class="button is-link" href="{{ path_for('user.browsing_history') }}">Browsing history</a></div>
          <div class="link_wrapper link_wrapper_2"><a class="button is-link" href="{{ path_for('chats') }}">Chats</a></div>
        {% endif %} 
      </div>
      <div class="user_wrapper">
        <div class="login_wrapper_user">
          <div class="dropdown is-hoverable">
            <div class="dropdown-trigger">
              <button class="button is-info" aria-haspopup="true" aria-controls="dropdown-menu4">
              <span data-id="{{ auth.user.id }}">{{ auth.user.username }}</span>
              <span class="icon is-small">
                <i class="fas fa-angle-down" aria-hidden="true"></i>
              </span>
              </button>
            </div>
            <div class="dropdown-menu" role="menu">
              <div class="dropdown-content">
                <div class="dropdown-item">
                    <div class="dropdown_menu_list">
                      <a class="dropdown_menu_item" href="{{ path_for('user.profile') }}">Profile</a>
                      <a class="dropdown_menu_item" href="{{ path_for('auth.password.change') }}">Change password</a>
                      {% if auth.is_filled %}       
                        <a class="dropdown_menu_item" href="{{ path_for('user.blacklist') }}">Blacklist</a>
                      {% endif %} 
                      <a class="dropdown_menu_item" href="{{ path_for('auth.signout') }}">Sign Out</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
         </div>
        {% else %}
        <div class="login_wrapper_buttons">
            <a class="button is-info" href="{{ path_for('auth.signin') }}">Login</a>
            <a class="button is-info" href="{{ path_for('auth.signup') }}">Sign Up</a>
        </div>
      {% endif %}
    </div>
</nav>