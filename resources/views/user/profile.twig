{% extends 'templates/app.twig' %}

{% block content %}


<div id="profile_photo">
    <div class="card">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner" role="listbox">
                {% for key, photo in photos %}
                    {% if key == 0 %}
                        <div class="carousel-item active">
                    {% else %}
                        <div class="carousel-item">
                    {% endif %}
                    <img class="d-block img-fluid" src="{{ base_url() }}/app/users_photos/{{ photo }}" alt="No photo">
                    {% if key != 0 %}
                        <div class="carousel-caption d-none d-md-block">
                            <a href="{{ base_url() }}/user/profile?photo={{ key }}">Make this photo main</a>
                        </div>
                    {% endif %}
                </div>            
                {% endfor %}
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>    
        </div>
    </div>
</div>


<div id="profile">
    <h3 class="text-center mb-4">Youre profile</h3>
    <form enctype="multipart/form-data" action="{{ path_for('user.profile') }}" method="post" autocomplete="off">
        
        <div class="form-group row">
            <label for="firstName" class="col-sm-3 col-form-label">First Name:</label>
            <div class="col-sm-3">
                <input class="form-control" name="firstName" type="text" value="{{ auth.user.firstName }}">
            </div>
            <label for="lastName" class="col-sm-3 col-form-label">Last Name:</label>
            <div class="col-sm-3">
                <input class="form-control" name="lastName" type="text" value="{{ auth.user.lastName }}">
            </div>
        </div>

        <div class="form-group row">
            <label for="gender" class="col-sm-3 col-form-label">Gender:</label>
            <div class="col-sm-3">
                <select class="form-control" id="gender" name="gender">
                    <option>Male</option>
                    <option>Female</option>
                </select>
            </div>
            <label for="sexualPreferences" class="col-sm-3 col-form-label">Sexual preferences:</label>
            <div class="col-sm-3">
                <select class="form-control" id="sexualPreferences" name="sexualPreferences">
                    <option>Heterosexual</option>
                    <option>Homosexual</option>
                    <option>Bisexual</option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label for="email" class="col-sm-3 col-form-label">Email:</label>
            <div class="col-sm-3">
                <input class="form-control" name="email" type="email" value="{{ auth.user.email }}">
            </div>
            <label for="ateOfBirth" class="col-sm-3 col-form-label">Date of Birth</label>
            <div class="col-sm-3">
                <input type="date" class="form-control" name="dateOfBirth">
            </div>
        </div>

        <div class="form-group">
            <label for="country">Select country:</label>
            <select class="form-control" id="country" name="country">
                <option selected value>Select Country</option>
            </select>
            <label for="state">Select state:</label>
            <select class="form-control" id="state" name="state">
                <option selected value>Select State</option>
            </select>
            <label for="city">Select city:</label>
            <select class="form-control" id="city" name="city">
                <option selected value>Select City</option>
            </select>    
        </div>

        <div class="form-group">
            <label for="biography">About me:</label>
            <textarea class="form-control" rows="5" id="biography" name="biography"></textarea>
        </div>
        <div class="form-group">
          <label for="tags">Add tags:</label>
            <input class="form-control" type="text" name="tags" id="tag">
            <div id="show_tags">
                <ul></ul>
            </div>
            <a href="#" onclick="event.preventDefault()" id="addTag">Add tag</a>
        </div>
        <div class="form-group">
            <label for="photos">Add photos:</label>
            <input id="file-input" type="file" name="picture[]" multiple name="photos">
            <div id="preview"></div>
        </div>
        <div id="sity">

        </div>
        <input class="btn btn-lg btn-primary btn-block" value="Submit" type="submit">
    </form>
</div>

{% endblock %}
