{% extends 'templates/app.twig' %}

{% block content %}
<div class="container-fluid bg-light py-3">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card card-body">
                <h3 class="text-center mb-4">Sign in</h3>
                <form action="{{ path_for('auth.signin') }}" method="post" autocomplete="off">
                    <div class="form-group">
                        <input class="form-control{{errors.username ? ' is-invalid' : '' }}" placeholder="Username" name="username" type="text" value="{{ old.username }}">
                        {% if errors.username %}
                            <div class="invalid-feedback">{{ errors.username }}</div>
                        {% endif %}
                    </div>
                    <div class="form-group">
                        <input class="form-control{{errors.password ? ' is-invalid' : '' }}" placeholder="Password" name="password" value="" type="password">
                        {% if errors.password %}
                            <div class="invalid-feedback">{{ errors.password }}</div>
                        {% endif %}
                    </div>
                    <input class="btn btn-lg btn-primary btn-block" value="Sign in" type="submit">
                </form>
            </div>
        </div>
    </div>
</div>        
{% endblock %}