{% extends 'templates/app.twig' %}

{% block content %}
<div class="container-fluid bg-light py-3">
    <div class="row">
        <div class="col-md-6 mx-auto">
                <div class="card card-body">
                    <h3 class="text-center mb-4">Sign up</h3>
                    <form action="{{ path_for('auth.signup') }}" method="post" autocomplete="off">
                        <div class="form-group">
                            <input class="form-control{{errors.username ? ' is-invalid' : '' }}" placeholder="Username" name="username" value="{{ old.username }}" type="text">
                            {% if errors.username %}
                                <div class="invalid-feedback">{{ errors.username }}</div>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            <input class="form-control{{errors.email ? ' is-invalid' : '' }}" placeholder="E-mail Address" name="email" type="text" value="{{ old.email }}">
                            {% if errors.email %}
                                <div class="invalid-feedback">{{ errors.email }}</div>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            <input class="form-control{{errors.firstName ? ' is-invalid' : '' }}" placeholder="First name" name="firstName" value="{{ old.firstName }}" type="text">
                            {% if errors.firstName %}
                                <div class="invalid-feedback">{{ errors.firstName }}</div>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            <input class="form-control{{errors.lastName ? ' is-invalid' : '' }}" placeholder="Last name" name="lastName" value="{{ old.lastName }}" type="text">
                            {% if errors.lastName %}
                                <div class="invalid-feedback">{{ errors.lastName }}</div>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            <input class="form-control{{errors.password ? ' is-invalid' : '' }}" placeholder="Password" name="password" value="" type="password">
                            {% if errors.password %}
                                <div class="invalid-feedback">{{ errors.password }}</div>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            <input class="form-control{{errors.confirmPassword ? ' is-invalid' : '' }}" placeholder="Confirm Password" name="confirmPassword" value="" type="password">
                            {% if errors.confirmPassword %}
                                <div class="invalid-feedback">{{ errors.confirmPassword }}</div>
                            {% endif %}
                        </div>
                        <div class="checkbox">
                            <label class="small">
                                <input name="terms" type="checkbox">I have read and agree to the <a href="#">terms of service</a>
                            </label>
                        </div>
                        <input class="btn btn-lg btn-primary btn-block" value="Sign Me Up" type="submit">
                    </form>
                </div>
        </div>
{% endblock %}