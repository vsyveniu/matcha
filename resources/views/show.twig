{% extends 'templates/app.twig' %}

{% block content %}

<div id="profile_photo">
    <div class="card">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner" role="listbox">
                {% for key, photo in photos %}
                    {% if key == 0 %}
                        <div class="carousel-item active">
                    {% else %}
                        <div class="carousel-item">
                    {% endif %}
                    <img class="d-block img-fluid" src="{{ base_url() }}/../app/users_photos/{{ photo }}" alt="No photo">
                </div>            
                {% endfor %}
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>    
        </div>
    </div>
</div>


<div id="profile">
    <p>
        <h5>{{ profile.firstName }} {{ profile.lastName }} ({{ profile.age }})</h5>
        {% if profile.status == 'ONLINE' %}
            {{ profile.status }}
        {% else %}
            Last active: {{ profile.status }}
        {% endif %}
    </p>
    <p>{{ profile.gender }}</p>
    <p>Fame rating: {{fame_rating}}</p>
    <p><strong>Seeking: </strong></p>
    <a href="javascript:void(0)" id="like">
        {% if like  %}
            dislike
        {% else %}
            like   
        {% endif %}
    </a>
    <h5>Member Overview</h5>
    <p>{{ user_profile.biography }}</p>
    <h5>Interests</h5>
    <p>{{ user_profile.interests }}</p>
</div>

{% endblock %}
